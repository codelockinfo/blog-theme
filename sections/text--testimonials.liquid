{{ 'section-testimonials.min.css' | asset_url | stylesheet_tag }}

<section class="homepage-sections-wrapper">

  <div class="{% if template.name == "product" %}container--product-page {% else %}container{% endif %} testimonial-section--{{ section.id }}" data-wetheme-section-type="text--testimonials" data-wetheme-section-id="{{ section.id }}">
    <div class="row">
      <div class="page-width col-md-12">
        {% if section.settings.title != blank or section.settings.subheading != blank %}
          <div class="title-bar custom-font">
            
            {% if section.settings.title != blank %}
              <h2 class="wow">{{ section.settings.title | escape }}</h2>
            {% endif %}
            {% if section.settings.subheading != blank %}
              <h3 class="type-subheading type-subheading--1 wow{% if section.settings.title != blank %} typography--padding-bottom{% endif %}">{{ section.settings.subheading | escape }}</h3>
            {% endif %}
          </div>
        {% endif %}

        {% case section.blocks.size %}
          {% when 0 %}
            <div class="placeholder-noblocks">
              {{ 'general.onboarding.no_content' | t }}
            </div>
          {% when 1 %}
            <div class="row">
              <div class="col-md-12">
                <ul class="slides testimonial-slides" style="width: {{ section.blocks | size | times:100 }}%;">
                  {% for block in section.blocks %}
                    <li {{ block.shopify_attributes }} class="slider-block--{{ block.id }}">
                      <div class="testimonial-container">
                        <div class="testimonial-content">
                          <figure>

                            {% if block.settings.testimonial != blank %}
                              <div class="testimonial-text">
                                <blockquote>
                                  {{ block.settings.testimonial }}
                                </blockquote>
                              </div>
                            {% endif %}
                            {% if block.settings.link != blank and block.settings.author != blank %}
                              <a href="{{ block.settings.link }}" target="_blank">
                                <h3 class="type-subheading type-subheading--1"><cite class="author">{{ block.settings.author | escape }}</cite></h3>
                              </a>
                            {% elsif block.settings.author != blank %}
                              <h3 class="type-subheading type-subheading--1"><cite class="author">{{ block.settings.author | escape }}</cite></h3>
                            {% endif %}
                          </figure>
                        </div>
                      </div>
                    </li>
                  {% endfor %}
                </ul>
              </div>
            </div>
          {% else %}            
            <div class="slider-homepage-testimonial">
              <ul class="testimonial-slides row justify-content-center">
                {% assign number_of_slides_float = section.blocks | size | times:1.0 %}
                {% for block in section.blocks %}
                  <li class="col-md-4" {{ block.shopify_attributes }}>
                    <div class="testimonial-container">
                      <div class="testimonial-content {% if section.settings.show-slide-arrows %}testimonial--arrow-padding{% else %}testimonial--no-arrow-padding{% endif %}">
                        <figure>
                          {% if block.settings.testimonial != blank %}

                            {% if block.settings.testimonialImage != blank %}
                              <img
                                src="{{ block.settings.testimonialImage | img_url: '300x' }}"
                                alt="{{ block.settings.author | escape }}"
                                class="testimonial-indiv--circle"
                                style="object-fit:cover;object-position:{{ block.settings.testimonialImage.presentation.focal_point }};"
                              >
                            {% endif %}

