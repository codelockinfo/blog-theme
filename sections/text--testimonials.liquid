                            {% endif %}
                            <figcaption class="testimonial-text">
                              <span class="sr-only">{{ block.settings.stars }}</span>
                              <blockquote>
                                {{ block.settings.testimonial }}
                              </blockquote>
                            </figcaption>
                          {% endif %}
                          {% if block.settings.link != blank and block.settings.author != blank %}
                            <a href="{{ block.settings.link }}" target="_blank">
                              <h3><cite class="author">{{ block.settings.author | escape }}</cite></h3>
                            </a>
                          {% elsif block.settings.author != blank %}
                            <h3><cite class="author">{{ block.settings.author | escape }}</cite></h3>
                          {% endif %}
                        </figure>
                      </div>
                    </div>
                  </li>
                {% endfor %}
              </ul>
            </div>
        {% endcase %}
      </div>
    </div>
  </div>
</section>

<style>
  .testimonial-stars {
    --testimonial-stars-color: {{ section.settings.stars-color }};
  }
</style>

