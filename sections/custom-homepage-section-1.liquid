{{ 'section-rich-text.min.css' | asset_url | stylesheet_tag }}

<section class="homepage-sections-wrapper" id="homepage-sections-wrapper--{{ section.id }}">

  <div class="accent-left-image">
    <img class="mobile-hide" src="https://cdn.shopify.com/s/files/1/2227/4617/files/Mask_Group_163_0461166c-3011-42d9-81f7-3a63f65dd06b.png?v=1678100711">
    <img class="desktop-hide" src="https://cdn.shopify.com/s/files/1/2227/4617/files/Mask_Group_215.png?v=1678101848">
  </div>

  <div class="accent-right-image">
      <img src="https://cdn.shopify.com/s/files/1/2227/4617/files/Mask_Group_162_4ddd34fc-1c19-4c71-b014-cfed799259b5.png?v=1678100711">
    </div>

  <div class="{% if template.name == "product" %}container--product-page {% else %}container{% endif %}">
    <div class="row">
      <div class="col">
        {% if section.settings.title != blank or section.settings.subheading != blank %}
          <div class="title-bar custom-font ">
            {% if section.settings.subheading != blank %}
              <h3 class="type-subheading type-subheading--1 wow{% if section.settings.title != blank %} typography--padding-bottom{% endif %}">{{ section.settings.subheading | escape }}</h3>
            {% endif %}
            {% if section.settings.title != blank %}
              <h1 class="wow">{{ section.settings.title }}</h1>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>

      <div class="homepage-indiv-section-wrapper grid--full homepage-featured-content-wrapper wow">
        <div class="row">
        {% case section.settings.width %}
          {% when 'small' %}
            <div class="col-md-6 offset-md-3 col-12 homepage-featured-rich-text">
          {% when 'medium' %}
            <div class="col-md-8 offset-md-2 col-12 homepage-featured-rich-text">
          {% when 'large' %}
            <div class="col-md-10 offset-md-1 col-12 homepage-featured-rich-text">
          {% when 'full-width' %}
            <div class="col-md-12 col-12 homepage-featured-rich-text">
        {% endcase %}

          {% if section.settings.text != blank %}
            <div class="rte featured-row__subtext textarea">{{ section.settings.text }}</div>
          {% endif %}

          {% if section.settings.button_label != blank and section.settings.button_link != blank %}
            <div>
              <a href="{{ section.settings.button_link }}" class="btn">
                {{ section.settings.button_label }}
              </a>
            </div>
          {% endif %}

          {% if section.settings.image %}
            <div class="rich-text-image-wrapper">
              <div>
                {% render 'responsive-image' with section.settings.image, alt: section.settings.image.alt, class: 'feature-row__image' %}
              </div>
            </div>
          {% endif %}

        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <div class="custom-logo-item-container">
          {% for block in section.blocks %}
            <div class="custom-logo-item">
              <div class="custom-logo-item-image">
                {% render 'responsive-image' with block.settings.image, alt: block.settings.image.alt  %}
              </div>
            </div>
          {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>

</section>

<style>
  .custom-logo-item-container{
    display: flex;
    justify-content: center;
    align-items: center;
        column-gap: 10px;
    margin-top: 60px;
  }

  .custom-logo-item{
    width: calc(25% - 10px);
  }

  .custom-logo-item-image{
    padding: 20%;
    box-shadow: 0px 15px 60px #0d1d3e4a;
    background: var(--page-background);
  }

  #homepage-sections-wrapper--{{ section.id }} .title-bar h1{
    font-size: 60px;
    margin-bottom: 25px;
  }

  #homepage-sections-wrapper--{{ section.id }}{
    background-image: url(https://cdn.shopify.com/s/files/1/2227/4617/files/Group_96901.png?v=1677080399);
    background-repeat: no-repeat;
    background-size: cover;
    position: relative;
  }

  #homepage-sections-wrapper--{{ section.id }} .accent-left-image{
    position: absolute;
    left: 0;
        top: 0px;
  }

  #homepage-sections-wrapper--{{ section.id }} .accent-right-image{
    position: absolute;
    right: 0;
    bottom: -60px;
  }

  @media screen and (max-width: 768px){
    #homepage-sections-wrapper--{{ section.id }}{
      background-size: contain;
    }

    #homepage-sections-wrapper--{{ section.id }} .title-bar h1{
      font-size: 30px;
    }

    #homepage-sections-wrapper--{{ section.id }} .custom-logo-item-container{
      margin-top: 40px;
    }

    #homepage-sections-wrapper--{{ section.id }}  .custom-logo-item {
        width: calc(50% - 10px);
    }

    #homepage-sections-wrapper--{{ section.id }} .custom-logo-item-container{
      flex-wrap: wrap;
      justify-content: left;
    }

    #homepage-sections-wrapper--{{ section.id }} .accent-left-image img{
      width: 155px;
      top: 0;
    }

    #homepage-sections-wrapper--{{ section.id }} .accent-right-image img{
      
      width: 120px;
    }

    #homepage-sections-wrapper--{{ section.id }} .accent-right-image{
      bottom: 200px;
      
    }

    #homepage-sections-wrapper--{{ section.id }} .accent-left-image{
      top: 0;
      left: 0;
    }
  }
</style>

