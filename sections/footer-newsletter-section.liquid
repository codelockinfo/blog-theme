{{ 'section-newsletter.min.css' | asset_url | stylesheet_tag }}

<style>
  #newsletter-section--{{ section.id }}{
    
    background-image: url(https://cdn.shopify.com/s/files/1/2227/4617/files/Mask_Group_198_ba729acf-397f-48d3-974e-ddb08fd9cc40.png?v=1678101222);
    background-repeat: no-repeat;
    background-position-x: 100%;
    background-position-y: 20%;
    padding-top: 100px;
  }

  @media  screen and (max-width: 768px){
    #newsletter-section--{{ section.id }}{
      background-size: 180px;
      background-position-y: 0;
    }

    .shopify-section.homepage-section--newsletter-wrapper .title-bar{
      text-align: left;
    }

    #newsletter-wrapper, [id^=newsletter-wrapper]{
      flex-direction: column;
    }

    #newsletter_submit, [id^=newsletter_submit]{
      max-width: 150px;
      margin-top: 20px;
    }
  }
</style>

<section id="newsletter-section--{{ section.id }}" class="homepage-sections-wrapper">

{% assign title = false %}
{% if section.settings.title != blank or
  section.settings.subheading != blank or
  section.settings.newsletter_description != blank %}
  {% assign title = true %}
{% endif %}

  <div class="container">
    <div class="row" style="justify-content: left;">
      <div class="col-sm-12 col-md-5 col-lg-6 newsletter__item">
        <div class="newsletter__title wow">
          {% if title %}
            <div class="title-bar">
              {% if section.settings.subheading != blank %}
                <h3 class="type-subheading type-subheading--1 wow{% if section.settings.title != blank %} typography--padding-bottom{% endif %}">{{ section.settings.subheading | escape }}</h3>
              {% endif %}
              {% if section.settings.title != blank %}
                <h2 class="wow">{{ section.settings.title | newline_to_br }}</h2>
              {% endif %}
              {% if section.settings.newsletter_description != blank %}
                {{ section.settings.newsletter_description }}
              {% endif %}
            </div>
          {% endif %}
        </div>
        <div class="newsletter_form wow">
          {% render 'newsletter-form', form_id: 'newsletter_section_form' %}
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
    "name": {
        "en": "Footer - Newsletter",
        "de": "Newsletter",
        "es": "Boletín de noticias",
        "fr": "Bulletin d'information",
        "pt-PT": "Newsletter"
    },
    "class": "homepage-section--newsletter-wrapper",
    "settings": [
        {
            "type": "text",
            "id": "subheading",
            "label": {
              "en": "Subheading",
              "de": "Unterüberschrift",
              "es": "Subencabezado",
              "fr": "Sous-rubrique",
              "pt-PT": "Subtítulo"
            }
        },
        {
            "id": "title",
            "type": "textarea",
            "label": {
                "en": "Heading",
                "de": "Überschrift",
                "es": "Encabezado",
                "fr": "Rubrique",
                "pt-PT": "Título"
            },
            "default": {
                "en": "Join our mailing list",
                "de": "Melden Sie sich bei unserer Mailingliste an",
                "es": "Únase a nuestra lista de correo electrónico",
                "fr": "Inscrivez-vous à notre liste d'envoi",
                "pt-PT": "Aderir à nossa Lista de E-mails"
            }
        },
        {
            "type": "richtext",
            "id": "newsletter_description",
            "label": {
              "en": "Text",
              "de": "Text",
              "es": "Texto",
              "fr": "Texte",
              "pt-PT": "Texto"
            },
            "default": {
              "en": "<p>Describe the benefits of your newsletter</p>",
              "de": "<p>Beschreiben Sie die Vorteile Ihres Newsletters</p>",
              "es": "<p>Describe las ventajas de tu boletín de noticias</p>",
              "fr": "<p>Décrivez les avantages de votre newsletter</p>",
              "pt-PT": "<p>Descreva os benefícios do seu boletim informativo</p>"
            }
        }
    ]
}
{% endschema %}
