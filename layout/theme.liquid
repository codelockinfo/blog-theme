<script>
(function() {
  var redirectsUrl = {{ 'redirects.json' | asset_url | json }};
  
  fetch(redirectsUrl)
    .then(res => res.json())
    .then(rules => {

      var path = window.location.pathname;       
      var search = window.location.search;       
      var full = path + search;                 
      if (search.includes("page=1")) {
        var matchPage1 = rules.find(rule => rule.from === full);

        if (matchPage1) {
          if (matchPage1.to !== full) {
            console.log("Redirecting PAGE=1:", full, "→", matchPage1.to);
            window.location.replace(matchPage1.to);
            return;
          }
        }
      }
      var cleanPath = path.replace(/\/$/, ""); // normalize trailing slash
      var matchNormal = rules.find(rule => rule.from.replace(/\/$/, "") === cleanPath);

      if (matchNormal && matchNormal.to !== cleanPath) {
        console.log("Redirecting NORMAL:", cleanPath, "→", matchNormal.to);
        window.location.replace(matchNormal.to);
      }

    })
    .catch(err => console.error("Redirect error:", err));

})();
</script>
